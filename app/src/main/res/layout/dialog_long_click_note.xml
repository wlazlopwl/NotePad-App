<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >


    <LinearLayout
        android:id="@+id/dialog_copy"
        android:layout_width="match_parent"

        android:layout_height="50dp"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_content_copy_black_24dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:text="@string/dialog_copy">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_duplicate"
        android:layout_width="match_parent"

        android:layout_height="50dp"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_content_copy_black_24dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:text="@string/dialog_duplicate">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_share"
        android:layout_width="match_parent"

        android:layout_height="50dp"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_share_black_24dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:text="@string/dialog_share">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_delete"
        android:layout_width="match_parent"

        android:layout_height="50dp"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:tint="@color/red"
            android:src="@drawable/ic_delete_black_24dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red"
            android:text="@string/dialog_delete">

        </TextView>

    </LinearLayout>

</LinearLayout>